<style>
    .admin-orders-container {
        min-height: 100vh;
    }

    .search-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin: 3rem 0;
    }

    .admin-order-search-box {
        border: 1px solid #3a3939;
        border-radius: 10px;
        padding: .2rem .3rem;
        margin-top: 2rem;
        background-color: #e4dada;
    }

    #order-search {
        border: none;
        outline: none;
        width: 30rem;
        height: 2.5rem;
    }

    table th,
    td {
        text-align: center;
    }
</style>







<%- include('navbar') %>



    <div class="admin-orders-container container">


        <div class="search-container d-flex">
            <h2 class="text-white mt-4 ">Orders</h2>

            <!-- order search -->
            <form action="/admin/order" method="get" class="admin-order-search-box d-flex">
                <input type="text" placeholder="search for orders" name="orderSearch" id="order-search">
                <button class="btn"><i class="fa-solid fa-magnifying-glass"></i></button>
                <!-- <input class="btn btn-primary" type="button" value="Search"> -->
            </form>
        </div>








        <div class="order-list-box">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Si.No</th>
                       
                        <th scope="col">OrderId</th>
                        <th scope="col">CustomerName</th>
                     
                        <th scope="col">Order Date</th>

                        <th scope="col">Price</th>
                        <th scope="col">Payment Method</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
              

                  
                    <tbody>
                        <% order.forEach((order, index) => { %>
                           
                                <tr>
                                    <th scope="row"><%= index + 1 %></th>
                                    <td><%= order._id %></td>
                                    <td><%= order.contactInfo.name %></td>
                                  
                                    <td><%= order.createdAt.toDateString() %></td>
                                    <td><i class="fa-solid fa-indian-rupee-sign"></i> <%= order.totalPrice %></td>
                                    <td><%= order.paymentMethod %></td>
                                    <td><%= order.status %></td>
                                    <td>
                                        <a href="/admin/order-view/<%= order._id %>" id="view-order-button" class="btn" >
                                            <i class="fa-solid fa-pen-to-square" style="color: #e2df19;"></i>
                                        </a>
        
                                    </td>
                                </tr>
                         
                        <% }) %>
                    </tbody>

              
            </table>
        </div>
    </div>


    <%- include('footer') %>