<style>
   

    .admin-dashboard {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4rem;
        margin-top: 4rem;
    }

    .search-container{
        align-items: center;
        margin: 3rem,0;
        
    }


    .admin-category-search-container {
        border: 1px solid #3a3939;
        border-radius: 10px;
        padding: .2rem .3rem;
        margin-top: 2rem;
        margin-left: 4rem;
     
        background-color: #e4dada;
    }

    .admin-category-search-container input{

        
        border:none;
        background-color:#e4dada ;
    }

    
   
</style>


<%- include('navbar') %>



    <div class="admin-dashboard">

      
        <div class="search-container d-flex">
            <h2 class="text-white mt-4 ">Category</h2>

              <!-- category search -->
            <form action="/search" method="get"  class="admin-category-search-container d-flex">
                <input type="text" placeholder="search for categories">
                <button class="btn"><i class="fa-solid fa-magnifying-glass"></i></button>
                <!-- <input class="btn btn-primary" type="button" value="Search"> -->
            </form>
        </div>


        
        
          <div class="d-flex align-center">
            <input type="button" class="btn btn-success" value="Add Category" data-bs-toggle="modal" data-bs-target="#addCategory">
          </div>

          <!-- add category -->

          <div class="modal fade" id="addCategory">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                            <h5 class="modal-title"> Add New Category</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/admin/category" method="post">
                            <label class="form-label">Category</label>
                            <input type="text" class="form-control" name="Newcategory" minlength="3" maxlength="30" required>
                            <input type="submit" class="btn btn-primary mt-2" value="Add Category">
                        </form>
                    </div>
                </div>

            </div>
          </div>
    </div>

   <div class="category-list-box">
    <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Si.No</th>
            <th scope="col">CategoryName</th>
            <th scope="col">Added Date</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
       
      </table>
   </div>


  

