</style>




<%- include('navbar') %>

    <% if (cart) { %>
        <div class="container">
            <div class="row mt-5">
                <% if (cart.items.length !=0) { %>
                    <% cart.items.forEach((items, index)=> { %>
                        <div class="col-xl-8 cart-item">
                            <div class="card border shadow-none">
                                <div class="card-body">
                                    <div class="d-flex align-items-start border-bottom pb-3">
                                        <div class="me-4">
                                            <img src="../../<%= items.productId.productImage[0] %>" alt=""
                                                class="avatar-lg rounded">
                                        </div>
                                        <div class="flex-grow-1 align-self-center overflow-hidden">
                                            <div>
                                                <h5 class="text-truncate font-size-18">
                                                    <a href="/user/product-view/<%= items.productId.id %>"
                                                        class="text-dark">
                                                        <%= items.productId.productName %>
                                                    </a>
                                                </h5>
                                                <p class="text-muted mb-0">
                                                    <i class="bx bxs-star text-warning"></i>
                                                    <i class="bx bxs-star text-warning"></i>
                                                    <i class="bx bxs-star text-warning"></i>
                                                    <i class="bx bxs-star text-warning"></i>
                                                    <i class="bx bxs-star-half text-warning"></i>
                                                </p>
                                                <!-- <p class="mb-0 mt-1 badge badge-success">
                                                    <%= items.productId.productDiscount %>&percnt; OFF
                                                </p> -->
                                                <% if(items.productId.productDiscount>0){ %>
                                                    <p class="mb-0 mt-1 badge bg-danger">
                                                        <%= items.productId.productDiscount %>&percnt; OFF
                                                    </p>
