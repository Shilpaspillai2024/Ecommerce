<style>
    body {
        background-color: black;
        color: #ffffff;
        font-family: Arial, sans-serif;
    }



    .form-control {
        background-color: #F1D9D9;
        color: #0f0f0f;
        border: none;
    }

    .form-control:focus {
        background-color: #e7dfdf;
        color: #0e0d0d;
    }

    .profile-container {
        margin-top: 20px;

    }

    .left-container {
        background-color: #2b2b2b;
        border-radius: 20px;
        padding: 20px;
    }

    .profile-header {
        /* background-color: #333333; */
        padding: 20px;
        border-radius: 10px;
        text-align: left;
        display: flex;
        align-items: center;
    }

    .profile-header img {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-right: 20px;
    }

    .profile-header h3 {
        margin: 0;
    }

    .profile-header p {
        margin: 5px 0 0;
    }

    .form-group input:focus {
        color: #131212;
    }

    .form-group input::placeholder {
        color: #1f1e1e;
    }




    .button-container {
        display: flex;
        justify-content: center;

        margin-top: 1rem;
        width: 100%;
        /* Adjust width as needed */
    }

    .btn-save,
    .btn-cancel {
        width: 20%;
        /* Adjust width to fit within the container */
        padding: 10px;
        margin-top: 10px;
        border: none;
        border-radius: 10px;
        margin-right: 10px;

    }

    .btn-save {
        background-color: #DB4444;
        color: #fefeeb;
    }

    .btn-cancel {
        background-color: #6c757d;

        color: #fefeeb;
    }




    .side-menu {
        background-color: #333333;
        border-radius: 10px;
        padding: 20px;
        margin-left: 20px;
    }

    .side-menu a {
        color: #ffffff;
        text-decoration: none;
        display: block;
        margin-bottom: 10px;
    }

    .side-menu a:hover {
        text-decoration: underline;
    }

    .side-menu h4 {
        margin-bottom: 20px;
    }

    .form-group label {
        margin-top: 10px;
    }

    .form-container {
        background-color: #fefeeb;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
        color: #232323;
    }

    /* for change password modal
        */

    /* Modal */
    .modal {
        display: none;
        /* Hidden by default */
        position: fixed;
        /* Stay in place */
        z-index: 1;
        /* Sit on top */
        left: 0;
        top: 0;
        width: 100%;
        /* Full width */
        height: 100%;
        /* Full height */
        overflow: auto;
        /* Enable scroll if needed */
        background-color: rgba(0, 0, 0, 0.4);
        /* Black w/ opacity */
        color: black
    }

    /* Modal Content */
    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        /* 15% from the top and centered */
        padding: 20px;
        border: 1px solid #888;
        width: 60%;
        /* Could be more or less, depending on screen size */
    }

    /* Close Button */
    .close {
        color: #aaa;
        /* float: right; */
        font-size: 28px;
        font-weight: bold;
        text-align: right;

    }

    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }
</style>

<%-include('navbar')%>
    <div class="container profile-container">
        <div class="row">
            <div class="col-md-8 left-container">
                <div class="profile-header">
                    <img src="../../image/avatar.png" alt="Profile Picture">
                    <div>
                        <h3>
                            <%=userDetail.name%>
                        </h3>
                        <p>
                            <%=userDetail.email%>
