<style>
    body {
        background-color: black;
        color: #ffffff;
    }

    .address-card {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
        margin: 10px 0;
        position: relative;
    }

    .address-actions {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .address-header {
        font-weight: bold;
        font-size: 1.2em;
    }

    .address-body {
        margin-top: 10px;
    }

    .modal-header,
    .modal-body,
    .modal-footer {
        padding: 20px;
    }
</style>


<%- include('navbar') %>

    <div class="container">
        <h1 class="mt-5">My Addresses</h1>
        <button class="btn btn-outline-secondary my-3" data-toggle="modal" data-target="#addAddressModal">+ Add a new
            address</button>

        <% if (userAddress) { %>
            <div class="list-group">
                <% userAddress.forEach(address=> { %>
                    <div class="address-card">
                        <div class="address-actions">
                            <button class="btn btn-link">Edit</button>
                            <button class="btn btn-link">Remove</button>
                        </div>
                        <div class="address-header">
                            <%= address.contactName %> <span class="badge badge-secondary">HOME</span>
                        </div>
                        <div class="address-body">
                            <p>Contact Name: <%= address.contactName %>
                            </p>
                            <p>Door No: <%= address.doorNo %>
                            </p>
                            <p>Home Address: <%= address.homeAddress %>
                            </p>
                            <p>Area Address: <%= address.areaAddress %>
                            </p>
                            <p>Landmark: <%= address.landmark %>
                            </p>
                            <p>Pincode: <%= address.pincode %>
                            </p>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <% } else { %>
                <p>No addresses available.</p>
                <% } %>
    </div>

    <!-- Modal for adding new address -->
    <div class="modal fade" id="addAddressModal" tabindex="-1" aria-labelledby="addAddressModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addAddressModalLabel">Add New Address</h5>


                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="address-form" action="/user/add-address" method="POST">
                        <div class="form-group">
                            <label for="new-address-contactName">Contact Name:</label>
                            <input type="text" class="form-control" id="new-address-contactName" name="contactName"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="new-address-doorNo">Door No:</label>
                            <input type="text" class="form-control" id="new-address-doorNo" name="doorNo" required>
                        </div>
                        <div class="form-group">
                            <label for="new-address-homeAddress">Home Address:</label>
                            <input type="text" class="form-control" id="new-address-homeAddress" name="homeAddress"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="new-address-areaAddress">Area Address:</label>
                            <input type="text" class="form-control" id="new-address-areaAddress" name="areaAddress"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="new-address-landmark">Landmark:</label>
                            <input type="text" class="form-control" id="new-address-landmark" name="landmark" required>
                        </div>
                        <div class="form-group">
                            <label for="new-address-pincode">Pincode:</label>
                            <input type="text" class="form-control" id="new-address-pincode" name="pincode" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Address</button>
                    </form>
                </div>
            </div>
        </div>
    </div>




    <%-include('footer')%>
