<style>
    body {
        background-color: #232323;
        /* background: url('../../image/library.jpg');
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat; */
    }

    .login-container {
        /* height: 100vh; */
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 2rem;

    }

    .login-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        border: 1px solid #c8c8c8;
        border-radius: 30px;
        /* padding: 3rem 2rem; */
        padding: 2rem 0rem;
        /* background-color: rgba(255, 255, 255, 0.4); */
        /* -webkit-backdrop-filter: blur(5px); */
        /* backdrop-filter: blur(5px); */
        /* box-shadow: 1px 1px 20px #fefeeb; */
        /* background-color: #232323; */
        width: 70%;
        background: url('../../image/Untitled.jpg');
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
    }

    .login-form form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        width: 90%;
    }

    .login-form h4 {
        color: white;
        font-weight: bold;
    }

    .login-form input {
        width: 50%;
        height: 2.5rem;
        border-radius: 10px;
        outline: none;
        border: none;
        /* background-color: #e7e7e7; */
        background-color: #1a1a1a;
        color: #fefeeb;
        padding: 10px;
    }

    .login-form ::placeholder {
        color: #fefeeb;
    }

    .login-form button {
        /* width: 10rem; */
        background-color: rgb(162, 218, 33);
        border-radius: 20px;
        width: 10rem;
        height: 30px;
        font-weight: bold;

    }


    .login-password-forget {
        margin-left: auto;
    }

    .login-methods-box {
        width: 90%;
        text-align: center;
        position: relative;
    }




    .continue-with-label::after {
        content: "";
        position: absolute;
        top: 50%;
        /* Position at the vertical center */
        left: 0;
        width: 100%;
        height: 1px;
        background-color: rgb(133, 130, 130);
        z-index: -3;
        /* Ensure the ruler is behind the content */

    }

    .login-with-socialmedia-box {
        display: flex;
        justify-content: space-around;
        gap: 1rem;
        scale: 2;


    }


    .login-with-socialmedia-box i {
        cursor: pointer;
    }
</style>



<%- include('navbar') %>

    <div class="login-container">
        <div class="login-form">
            <form action="/user/login" method="post">
                <h4>User Login</h4>
                <input type="email" name="username" placeholder="username" required>
                <input type="password" name="password" placeholder="password" required>
                <a href="/user/forget-password" class="login-password-forget">forget password?</a>


                <button class="btn btn-primary" type="submit">Login</button>

            </form>

            <div class="login-methods-box">
                <b class="continue-with-label text-white">Or Continue with</b>
            </div>
            <div class="login-with-socialmedia-box">


                <a class="google-btn" href="/user/auth/google"> <img src="/image/google.png" alt=""
                        style="width: 15px;"> </a>


            </div>


            <div class="signup-page-render text-white">
                <p>If you are a new user? <a href="/user/signup">Signup</a></p>
            </div>
        </div>

    </div>


