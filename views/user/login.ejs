<style>
    
    body {
        background-color: #232323;
           }

    .login-container {
        
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 2rem;

    }

    .login-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        border: 1px solid #c8c8c8;
        border-radius: 30px;
       
        padding: 2rem 0rem;
       
        width: 70%;
        background: url('../../image/Untitled.jpg');
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
    }

    .login-form form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        width: 90%;
    }

    .login-form h4 {
        color: white;
        font-weight: bold;
    }

    .login-form input {
        width: 50%;
        height: 2.5rem;
        border-radius: 10px;
        outline: none;
        border: none;
       
        padding-right: 35px;
        color: #fefeeb;
        padding: 10px;
    }

    .login-form ::placeholder {
        color: #fefeeb;
    }

    .login-form button {
      
        background-color: rgb(162, 218, 33);
        border-radius: 20px;
        width: 10rem;
        height: 30px;
        font-weight: bold;

    }


    .login-password-forget {
        margin-left: auto;
    }

    .login-methods-box {
        width: 90%;
        text-align: center;
        position: relative;
    }




    .continue-with-label::after {
        content: "";
        position: absolute;
        top: 50%;
        /* Position at the vertical center */
        left: 0;
        width: 100%;
        height: 1px;
        background-color: rgb(133, 130, 130);
        z-index: -3;
        /* Ensure the ruler is behind the content */

    }

    .login-with-socialmedia-box {
        display: flex;
        justify-content: space-around;
        gap: 1rem;
        scale: 2;


    }

    .login-with-socialmedia-box i {
        cursor: pointer;
    }
    .input-container {
            position: relative;
            margin-bottom: 20px;
            width: 60%;
        }

        .input-container input {
          
            width: calc(100% - 5px);
            height: 40px;
            padding: 10px 35px 10px 10px;
            border-radius: 10px;
            border: none;
            color: #080808;
            font-size: 16px;
            outline: none;
            box-sizing: border-box;
        }

        .input-container i {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #080808;
            cursor: pointer;
            z-index: 1;
        }

        .input-container i.active {
            color: #ffffff;
        }
   /* Responsive adjustments */
@media (max-width: 768px) {
    .login-form {
        width: 90%;
    }

    .login-form input {
        width: 70%;
    }

    .input-container {
        width: 70%;
    }
}

@media (max-width: 480px) {
    .login-form {
        width: 100%;
        padding: 1rem;
    }

    .login-form input {
        width: 90%;
    }

    .input-container {
        width: 90%;
    }

    .login-form button {
        width: 80%;
    }
}
</style>



<%- include('navbar') %>

    <div class="login-container">
        <div class="login-form">
            <form action="/login" method="post">
                <h4>User Login</h4>
                
                <div class="input-container">
                    <input type="email" name="username" placeholder="Username" required>
                  
                </div>

                <div class="input-container">
                    <input type="password" name="password" id="password" placeholder="Password" required>
                    <i class="fas fa-eye-slash toggle-password"></i>
                    <i class="fas fa-eye toggle-password" id="togglePasswordVisible" style="display: none;"></i>
                </div>
               
                <a href="/forget-password" class="login-password-forget">forget password?</a>


                <button class="btn btn-primary" type="submit">Login</button>

            </form>

            <div class="login-methods-box">
                <b class="continue-with-label text-white">Or Continue with</b>
            </div>
            <div class="login-with-socialmedia-box">


                <a class="google-btn" href="/auth/google"> <img src="/image/google.png" alt=""
                        style="width: 15px;"> </a>


            </div>


            <div class="signup-page-render text-white">
                <p>If you are a new user? <a href="/signup">Signup</a></p>
            </div>
        </div>

    </div>


    <%- include('footer') %>

    <script>
     const togglePassword = document.querySelector('.toggle-password');
    const togglePasswordVisible = document.querySelector('#togglePasswordVisible');
    const password = document.querySelector('#password');

    togglePassword.addEventListener('click', function () {
        // Toggle the type attribute
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        
        // Toggle the eye icons
        togglePassword.style.display = type === 'password' ? 'inline-block' : 'none';
        togglePasswordVisible.style.display = type === 'password' ? 'none' : 'inline-block';
    });

    togglePasswordVisible.addEventListener('click', function () {
        // Toggle the type attribute back to password
        password.setAttribute('type', 'password');
        
        // Toggle the eye icons
        togglePassword.style.display = 'inline-block';
        togglePasswordVisible.style.display = 'none';
    });
</script>
   